<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Chronicles</title>
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
    <link
      rel="stylesheet"
      as="style"
      onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?display=swap&amp;family=Newsreader%3Awght%40400%3B500%3B700%3B800&amp;family=Noto+Sans%3Awght%40400%3B500%3B700%3B900"
    />
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <img src="logo.png" alt="">
                <a href="">Campus Chronicles</a>
            </div>
            <ul>
                <li><a href="">Home</a></li>
                <li><a href="">Academics</a></li>
                <li><a href="">Student Life</a></li>
                <li><a href="">Event</a></li>
                <li><a href="">Resources</a></li>
            </ul>
        </nav>
        <div class="user">
            <input type="text" placeholder="">
            <img src="user.jpg" alt="">
        </div>
    </header>

    <main>
        <section class="hero">
            <input type="text" placeholder="Search for posts...">
            <button onclick="document.getElementById('blogModal').style.display='block'">Write a Blog</button>
            <div class="hero-content">
                <h1>Welcome to Campus Chronicles</h1>
                <p>Your daily dose of campus life, events, and student stories.</p>
            </div>
        </section>

        <section class="featured-images">
            <h2>Featured Campus Life</h2>
            <div class="images">
                <% if (imagePosts && imagePosts.length > 0) { %>
                    <% imagePosts.forEach(post => { %>
                        <div class="image-col">
                            <img src="<%= post.thumbnail %>" alt="Image for <%= post.title %>">
                            <a href="<%= post.url %>" target="_blank">
                                <p><%= post.title %></p>
                            </a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No featured images found.</p>
                <% } %>
            </div>
        </section>

        <section class="user-blogs">
            <h2>üìù Student Blog Posts</h2>
            <div class="blog-list">
                <% if (userBlogs && userBlogs.length > 0) { %>
                    <% userBlogs.forEach(blog => { %>
                        <div class="blog-card">
                            <div class="blog-text">
                                <p class="category"><%= blog.category %></p>
                                <h3><%= blog.title %></h3>
                                <p class="excerpt"><%= blog.summary %></p>
                                <a href="<%= blog.url %>" target="_blank" class="read-more">Read M...</a>
                            </div>
                            <div class="blog-image">
                                <img src="<%= blog.image %>" alt="Blog image for <%= blog.title %>">
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No blog posts found.</p>
                <% } %>
            </div>
        </section>

        <section id="blogModal" style="display:none;" class="modal">
            <form action="/submit-post" method="POST" enctype="multipart/form-data">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>

                <label for="category">Category</label>
                <input type="text" name="category" id="category" required>

                <label for="content">Content</label>
                <textarea name="content" id="content" required></textarea>

                <label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/*" required>

                <button type="submit">Submit Post</button>
            </form>

        </section>


    </main>
</body>
</html>