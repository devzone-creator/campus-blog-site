<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Chronicles</title>
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
    <link
      rel="stylesheet"
      as="style"
      onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?display=swap&amp;family=Newsreader%3Awght%40400%3B500%3B700%3B800&amp;family=Noto+Sans%3Awght%40400%3B500%3B700%3B900"
    />
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <img src="logo.png" alt="">
                <a href="">Campus Chronicles</a>
            </div>
            <ul>
                <li><a href="">Home</a></li>
                <li><a href="">Academics</a></li>
                <li><a href="">Student Life</a></li>
                <li><a href="">Event</a></li>
                <li><a href="">Resources</a></li>
            </ul>
        </nav>
        <div class="user">
            <input type="text" placeholder="">
            <img src="user.jpg" alt="">
        </div>
    </header>

    <main>
        <section class="hero">
            <input type="text" placeholder="Search for posts...">
        </section>

        <section class="college-posts">
            <h2>ðŸ“š Top College Posts</h2>
            <div class="college-col">
                <% if (collegePosts && collegePosts.length > 0) { %>
                    <% collegePosts.forEach(post => { %>
                        <li><a href="<%= post.url %>" target="_blank"><%= post.title %></a></li>
                    <% }) %>
                <% } else { %>
                    <li>No posts found.</li>
                <% } %>
            </div>
        </section>

        <section class="featured-images">
            <h2>Featured Campus Life</h2>
            <div class="images">
                <% if (imagePosts && imagePosts.length > 0) { %>
                    <% imagePosts.forEach(post => { %>
                        <div class="image-col">
                            <img src="<%= post.thumbnail %>" alt="Image for <%= post.title %>">
                            <a href="<%= post.url %>" target="_blank">
                                <p><%= post.title %></p>
                            </a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No featured images found.</p>
                <% } %>
            </div>
        </section>

        <section class="users-blog"></section>

    </main>
</body>
</html>